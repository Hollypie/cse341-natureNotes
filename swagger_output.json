              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": [
          "Trails"
        ],
        "description": "Create a new trail.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Trail information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Trail"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Trail created successfully"
          },
          "400": {
            "description": "Invalid request data"
